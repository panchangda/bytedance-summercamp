	letter-spacing: 0;
	line-height: 68rpx;
	font-weight: 500;
}
.login-button {
	width: 638rpx;
	height: 88rpx;
	margin-top: 48rpx;
	background: #FFCC32;
	border-radius: 4rpx;
	font-family: PingFangSC-Regular;
